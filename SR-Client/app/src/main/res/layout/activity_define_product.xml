<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DefineProduct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <EditText
            android:id="@+id/editTextDefineProductID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Product ID"
            android:textSize="60px"
            android:layout_marginTop="50px"
            android:enabled="false"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"/>


        <EditText
            android:id="@+id/editTextDefineProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Name"
            android:textSize="60px"
            android:layout_marginTop="50px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"/>


        <EditText
            android:id="@+id/editTextDefineProductBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Brand"
            android:textSize="60px"
            android:layout_marginTop="50px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"/>

        <EditText
            android:id="@+id/editTextDefineProductThreshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Threshold"
            android:layout_marginTop="50px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            />


        <EditText
            android:id="@+id/editTextDefineProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint="Description"
            android:textSize="60px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/viewImage"
                android:layout_width="149dp"
                android:layout_height="141dp"
                android:src="@drawable/camera"
                android:layout_marginTop="100px"
                android:layout_marginLeft="50px"/>

            <Button
                android:id="@+id/buttonProductImage"
                android:bottomRightRadius="20dp"
                android:bottomLeftRadius="10dp"
                android:background="@drawable/mybutton"
                android:textColor="#ffffff"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginTop="200px"
                android:layout_marginLeft="200px"
                android:text="Add Pic" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonSaveProduct"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginTop="200px"
            android:background="@drawable/mybutton"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:onClick="defineProduct"
            android:text="Add" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>